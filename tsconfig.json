{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "include": ["./src/*", "src/swapi/swapiHttpClient.ts"],
  "exclude": ["dist", "node_modules/*"]
}
